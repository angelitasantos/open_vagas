%header#navegacao.fixed-top.navbar-dark.bg-dark
  %section.navegacao-center
    %h2.logo.left
      %a{:href => root_path} Open Vagas
    / nome
    %nav.desktop.right
      %ul
        %li
          %a{:href => root_path} Home
        - unless user_signed_in?
          %li
            = link_to 'Entrar/Registrar', new_user_session_path
        - if user_signed_in?
          %li
            %a{:href => new_position_path} Publicar Vaga
          %li
            %a{:href => positions_path} Minhas Vagas
          %li.dropdown
            %a#dropdown01.nav-link.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#"} Configurações
            .dropdown-menu{"aria-labelledby" => "dropdown01"}
              = link_to('Minha Empresa', dynamic_url_company, class: 'dropdown-item')
              = link_to('Applicants', new_applicant_path, class: 'dropdown-item')
              %hr
              = link_to('Sair', destroy_user_session_path, method: :delete, class: 'dropdown-item')
    / desktop
    %nav.mobile.right
      .botao-menu-mobile
        %i.fa.fa-bars{"aria-hidden" => "true"}
      %ul
        %li
          %a{:href => root_path} Home
        - unless user_signed_in?
          %li
            = link_to 'Entrar/Registrar', new_user_session_path
        - if user_signed_in?
          %li
            %a{:href => new_position_path} Publicar Vaga
          %li
            %a{:href => positions_path} Minhas Vagas
          %li.dropdown
            %a#dropdown01.nav-link.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#"} Configurações
            .nav-dropdown-menu{"aria-labelledby" => "dropdown01"}
              = link_to('Minha Empresa', dynamic_url_company, class: 'nav-dropdown-item')
              = link_to('Applicants', new_applicant_path, class: 'nav-dropdown-item')
              %hr
              = link_to('Sair', destroy_user_session_path, method: :delete, class: 'nav-dropdown-item')
    / mobile
    .clear
    / clear
  / center
/ navegação